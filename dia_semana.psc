//Que pida un numero del 1 al 7 y diga dia de la semana correspondiente

Proceso diadelasemana
	Definir n como entero;
	Escribir "Por favor ingrese el numero" Sin Saltar; Leer n;
	Segun n hacer
		1:
			Escribir "Lunes";
		2:
			Escribir "Martes";
		3:
			Escribir "Miercoles";
		4:
			Escribir "Jueves";
		5:
			Escribir "Viernes";
		6:
			Escribir "Sabado";
		7:
			Escribir "Domingo";
	FinSegun
	
FinProceso
